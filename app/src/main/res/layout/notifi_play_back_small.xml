<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:background="@color/colorGray42"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_notifi_play_back_small_thumb"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_black_rubber"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/iv_notifi_play_back_small_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:id="@+id/tv_notifi_play_back_small_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="忽然"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_notifi_play_back_small_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_notifi_play_back_small_name"
            android:layout_marginRight="120dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="李志"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_notifi_play_back_small_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/iv_notifi_play_back_small_close"
            android:src="@mipmap/ic_music_play_forward"/>

        <ImageView
            android:id="@+id/iv_notifi_play_back_small_play"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/iv_notifi_play_back_small_next"
            android:src="@mipmap/ic_music_play"/>

    </RelativeLayout>
</LinearLayout>