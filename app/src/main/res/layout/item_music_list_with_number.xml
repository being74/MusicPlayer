<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_music_list_with_number_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_selector"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_item_music_list_with_number"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:gravity="left|center_vertical"
        android:text="1"
        android:textColor="@color/colorGrayBE"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_item_music_list_with_number_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_item_music_list_with_number"
        android:layout_toRightOf="@id/tv_item_music_list_with_number"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="fffasdfsdferqwe"
        android:textColor="@color/colorBlack2c"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_item_music_list_with_number_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_music_list_with_number"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/tv_item_music_list_with_number"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="fff"
        android:textColor="@color/colorBlack2c"
        android:textSize="16dp" />

</RelativeLayout>