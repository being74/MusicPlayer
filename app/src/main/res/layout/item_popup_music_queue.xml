<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_item_popup_music_queue"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="13dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="26dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_popup_music_queue_playing"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="6dp"
            android:src="@mipmap/ic_music_playing"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_item_popup_music_queue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="春末南方的城市"
            android:textColor="@drawable/selector_music_item_text_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_item_popup_music_queue_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=" - 李志"
            android:textColor="@drawable/selector_music_item_text_color_default"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_popup_music_queue_remove"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:padding="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_close_gray"/>

</RelativeLayout>