<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:background="@color/colorGray42"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_notifi_play_back_thumb"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_black_rubber"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/iv_notifi_play_back_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:id="@+id/tv_notifi_play_back_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="忽然"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_notifi_play_back_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_notifi_play_back_name"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="李志"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_notifi_play_back_artist"
            android:layout_marginTop="12dp"
            android:background="@color/colorGrayBE"/>

        <ImageView
            android:id="@+id/iv_notifi_play_back_pre"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/ic_music_play_rewind"/>

        <ImageView
            android:id="@+id/iv_notifi_play_back_play"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_notifi_play_back_pre"
            android:src="@mipmap/ic_music_play"/>

        <ImageView
            android:id="@+id/iv_notifi_play_back_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_notifi_play_back_play"
            android:src="@mipmap/ic_music_play_forward"/>

    </RelativeLayout>
</LinearLayout>