<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fragment_play_back_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrayF5"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    tools:context=".ui.fragment.PlaybackControlsFragment">

    <ImageView
        android:id="@+id/iv_fragment_play_back_head"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_fragment_play_back_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:paddingRight="8dp"
        android:layout_toEndOf="@id/iv_fragment_play_back_head"
        android:layout_toLeftOf="@+id/iv_fragment_play_back_control"
        android:layout_toRightOf="@id/iv_fragment_play_back_head"
        android:layout_toStartOf="@+id/iv_fragment_play_back_control"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fragment_play_back_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tv_fragment_play_back_music_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_fragment_play_back_control"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_music_play_dark" />
</RelativeLayout>
